// 2.Valid Parentheses

class Solution {
public:
    bool isValid(string s) {
        int n = s.size();
        int top = -1;
        for(int i=0; i<n; i++){
            if(top < 0){
                top++;
                s[top] = s[i];
                if(s[i]==')' || s[i]=='}' || s[i]==']') 
                    return false;
            }
            else if(s[top]=='(' && s[i]==')' || s[top]=='{' && s[i]=='}' || s[top]=='[' && s[i]==']')
                top--;
            else if(s[i]=='(' || s[i]=='{' || s[i]=='['){
                top++;
                s[top] = s[i];
            }
            else
                return false;
        }
        return top < 0;
    }
};
